:80 {
    root * /srv
    file_server
    try_files {path} /index.html
    encode gzip

    header {
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-eval' blob: https://cdn.jsdelivr.net; worker-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' blob: https://cdn.jsdelivr.net; font-src 'self' data:;"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
    }
}
