{
  "name": "megabonk",
  "version": "1.0.0",
  "description": "**The ultimate reference system for MegaBonk** - Items, Weapons, Tomes, Characters, Shrines, Build Planner, and Breakpoint Calculator all in one beautiful, interactive web app.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "python3 serve.py",
    "sync": "bunx cap sync",
    "android": "bunx cap sync && bunx cap open android",
    "ios": "bunx cap sync && bunx cap open ios",
    "build:android": "bunx cap sync android && bunx cap open android",
    "build:ios": "bunx cap sync ios && bunx cap open ios",
    "optimize:images": "node scripts/convert-to-webp.js",
    "version:inject": "node scripts/inject-version.js",
    "test": "vitest",
    "test:unit": "bun vitest run --coverage",
    "test:watch": "bun vitest watch",
    "test:e2e": "bunx playwright test",
    "test:e2e:sw": "bunx playwright test --config=playwright.sw.config.js",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:all": "bun run test:unit && bun run test:e2e",
    "test:full": "bun run test:unit && bun run test:e2e && bun run build && bun run test:e2e:sw",
    "test:ocr": "bun vitest run tests/unit/ocr.test.ts",
    "test:cv": "bun vitest run tests/unit/computer-vision.test.ts",
    "test:integration": "bun vitest run tests/unit/scan-build-integration.test.ts",
    "test:performance": "bun vitest run tests/performance/benchmark.test.ts",
    "test:recognition": "bun vitest run tests/unit/ocr.test.ts tests/unit/computer-vision.test.ts tests/unit/scan-build-integration.test.ts",
    "test:recognition:all": "bash scripts/run-all-tests.sh",
    "test:dashboard": "open test-results/dashboard.html || xdg-open test-results/dashboard.html || start test-results/dashboard.html",
    "test:cv:offline": "bun run tests/offline-cv-runner.ts",
    "test:cv:strategies": "bun run tests/offline-cv-runner.ts --strategies optimized,fast,accurate",
    "test:cv:ci": "bun run tests/offline-cv-runner.ts --output test-results/cv",
    "lint": "tsc --noEmit && eslint *.js scripts/*.js",
    "lint:fix": "eslint *.js scripts/*.js --fix",
    "format": "prettier --write \"src/**/*.{ts,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,css,html,json}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "chart.js": "^4.5.1",
    "fuse.js": "^7.1.0",
    "katex": "^0.16.27",
    "tesseract.js": "^7.0.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@types/chart.js": "^4.0.1",
    "@types/node": "^25.0.3",
    "canvas": "^2.11.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "serve": "^14.2.5",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.16",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,html,json}": [
      "prettier --write"
    ]
  }
}
