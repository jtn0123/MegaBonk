{
  "name": "megabonk",
  "version": "1.0.0",
  "description": "**The ultimate reference system for MegaBonk** - Items, Weapons, Tomes, Characters, Shrines, Build Planner, and Breakpoint Calculator all in one beautiful, interactive web app.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "python3 serve.py",
    "sync": "bunx cap sync",
    "android": "bunx cap sync && bunx cap open android",
    "ios": "bunx cap sync && bunx cap open ios",
    "build:android": "bunx cap sync android && bunx cap open android",
    "build:ios": "bunx cap sync ios && bunx cap open ios",
    "optimize:images": "node scripts/convert-to-webp.js",
    "version:inject": "node scripts/inject-version.js",
    "prebuild": "npm run version:inject",
    "test": "bun vitest",
    "test:unit": "bun vitest run --coverage",
    "test:watch": "bun vitest watch",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:all": "bun run test:unit && bun run test:e2e",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "chart.js": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "serve": "^14.2.5",
    "sharp": "^0.34.5",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,html,json}": [
      "prettier --write"
    ]
  }
}
